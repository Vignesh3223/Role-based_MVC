@model IEnumerable<Role_based.Models.Trainee>

@{
    ViewBag.Title = "View2";
}

<h2>View2</h2>

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tcity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Training.Domain)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tcity)
            </td>
            <td>
                @if (item.TImage != null)
                {
                    <img alt="profile" class="img-rounded img1" src="data:image;base64,@Convert.ToBase64String(item.TImage)" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Training.Domain)
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back", "Training2", "Training")
</div>

<style>
    img {
        width: 100px;
        height: 100px;
    }
</style>